<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/vertical_center_line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/cyan"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/horizontal_center_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="@color/cyan"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/horizontal_center_line"
        android:layout_margin="32dp" >

        <TextView
            android:id="@+id/hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:textSize="48dp" />

        <Button
            android:id="@+id/plus_btn"
            android:text="+"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:translationX="-24dp"
            android:translationY="-24dp" />

        <Button
            android:id="@+id/minus_btn"
            android:text="-"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:translationX="-24dp"
            android:translationY="24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/player2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/horizontal_center_line"
        android:layout_margin="32dp"
        >

        <TextView
            android:id="@+id/hp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:textSize="48dp" />

        <Button
            android:id="@+id/plus_btn2"
            android:text="+"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:translationX="-24dp"
            android:translationY="-24dp" />

        <Button
            android:id="@+id/minus_btn2"
            android:text="-"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:translationX="-24dp"
            android:translationY="24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/player2"
        android:layout_margin="32dp"
        >

        <TextView
            android:id="@+id/hp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:textSize="48dp" />

        <Button
            android:id="@+id/plus_btn2"
            android:text="+"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:translationX="-24dp"
            android:translationY="-24dp" />

        <Button
            android:id="@+id/minus_btn2"
            android:text="-"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:translationX="-24dp"
            android:translationY="24dp" />
    </RelativeLayout>

</RelativeLayout>